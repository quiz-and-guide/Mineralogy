<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">
    <ScrollView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="5dp">
            </TextView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp">
            </Space>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">
                <TextView
                    android:id="@+id/languaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/languaje"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="5dp">
                </TextView>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerLanguage">
                </Spinner>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@null"
                    android:id="@+id/btnLanguage"
                    android:text="@string/change_lang">
                </Button>
            </LinearLayout>

            <TextView
                android:id="@+id/theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/theme"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="5dp">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">
                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.18"
                    app:backgroundTint="@null"
                    android:background="@drawable/roundcorner_darck"
                    android:text="@string/text"
                    android:textColor="@color/white"
                    android:textAllCaps="false">
                </Button>
                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content">
                </Space>
                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.18"
                    app:backgroundTint="@null"
                    android:background="@drawable/roundcorner_light"
                    android:text="@string/text"
                    android:textColor="@color/black"
                    android:textAllCaps="false">
                </Button>
                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content">
                </Space>
                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.18"
                    app:backgroundTint="@null"
                    android:background="@drawable/roundcorner_green"
                    android:text="@string/text"
                    android:textColor="@color/black"
                    android:textAllCaps="false">
                </Button>
                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content">
                </Space>
                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.18"
                    app:backgroundTint="@null"
                    android:background="@drawable/roundcorner_blue"
                    android:text="@string/text"
                    android:textColor="@color/black"
                    android:textAllCaps="false">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rbDarck"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/darck">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rbLight"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/light">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rbGreen"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/green">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rbBlue"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/blue">
                    </RadioButton>
                </RadioGroup>
            </LinearLayout>
            <TextView
                android:id="@+id/textSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textSize"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="5dp">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rbVerySmall"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.20"
                        android:text="@string/verysmall">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rbSmall"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.20"
                        android:text="@string/small">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rbMedium"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.20"
                        android:text="@string/medium">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rbBig"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.20"
                        android:text="@string/big">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rbVeryBig"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.20"
                        android:text="@string/verybig">
                    </RadioButton>
                </RadioGroup>
            </LinearLayout>
            <TextView
                android:id="@+id/privacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="5dp">
            </TextView>
            <TextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="5dp">
            </TextView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>